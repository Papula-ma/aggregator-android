    <style name="LightTheme.Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="popupTheme">@style/PopupTheme</item>
    </style>

    <style name="PopupTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:colorBackground">?colorPopupBackground</item>
    </style>

    <style name="AccentBlue">
        <item name="colorAccent">@color/accent__blue</item>
        <item name="colorPopupBackground">@color/accent__blue_popup</item>
    </style>

    <style name="AccentGreen">
        <item name="colorAccent">@color/accent__green</item>
