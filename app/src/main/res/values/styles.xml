<resources>

    <style name="DarkTheme" parent="Theme.MaterialComponents">
        <item name="android:colorBackground">@color/dark_theme__background</item>
        <item name="android:statusBarColor">@color/dark_theme__toolbar</item>
        <item name="colorPrimary">@color/accent__blue</item>
        <item name="colorPrimaryVariant">@color/accent__blue__dark</item>
        <item name="colorOnPrimary">#ffffff</item>
        <item name="colorOnSecondary">#ffffff</item>
        <item name="colorSecondary">@color/accent__blue</item>
        <item name="colorSecondaryVariant">@color/accent__blue__dark</item>
        <item name="colorBottomNavigation">?colorPrimary</item>
        <item name="colorEntryListHeader">@color/dark_theme__entry_list_header</item>
        <item name="colorGray">@color/dark_theme__gray</item>
        <item name="colorToolbar">@color/dark_theme__toolbar</item>
        <item name="android:keepScreenOn">@bool/debug</item>
        <item name="toolbarStyle">@style/DarkTheme.Widget.Toolbar</item>
    </style>

    <style name="DarkTheme.NoActionBar" parent="Theme.MaterialComponents.NoActionBar">
