<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme" parent="android:Theme.Holo" />

    <style name="Theme" parent="BaseTheme">
        <item name="android:keepScreenOn">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:actionBarStyle">@style/Widget.ActionBar</item>
    </style>

    <style name="Widget.ActionBar" parent="android:Widget.ActionBar">
        <item name="android:background">@color/accent</item>
    </style>

    <style name="TextAppearance.EntryTitle" parent="android:TextAppearance.Medium">
        <item name="android:textColor">#ccc</item>
    </style>

    <style name="TextAppearance.EntryHeader" parent="android:TextAppearance.Small">
        <item name="android:textColor">#666</item>
    </style>

    <style name="Widget.ImageButton.FloatingAction" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/floating_action_button</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

</resources>
