    </style>

    <style name="AccentPurple">
        <item name="colorAccent">@color/accent__purple</item>
        <item name="colorPopupBackground">@color/accent__purple_popup</item>
    </style>

    <style name="AccentRed">
        <item name="colorAccent">@color/accent__red</item>
        <item name="colorPopupBackground">@color/accent__red_popup</item>
    </style>

    <style name="BottomNavigationAccent">
        <item name="colorBottomNavigation">?colorAccent</item>
    </style>

    <style name="BottomNavigationGray">
        <item name="colorBottomNavigation">?colorGray</item>
    </style>

