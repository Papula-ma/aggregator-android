<resources>

    <style name="DarkTheme" parent="Theme.MaterialComponents">
        <item name="android:colorBackground">@color/dark_theme__background</item>
        <item name="android:colorEdgeEffect">?colorAccent</item>
        <item name="colorPrimary">@color/dark_theme__primary</item>
        <item name="colorPrimaryDark">@color/dark_theme__primary_dark</item>
        <item name="colorAccent">@color/fallback__accent</item>
        <item name="colorBottomNavigation">?colorAccent</item>
        <item name="colorEntryListHeader">@color/dark_theme__entry_list_header</item>
        <item name="colorPopupBackground">@color/fallback__popup_background</item>
        <item name="colorGray">@color/dark_theme__gray</item>
        <item name="android:keepScreenOn">@bool/debug</item>
        <item name="toolbarStyle">@style/DarkTheme.Widget.Toolbar</item>
    </style>

    <style name="DarkTheme.NoActionBar" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:colorBackground">@color/dark_theme__background</item>
        <item name="android:colorEdgeEffect">?colorAccent</item>
        <item name="colorPrimary">@color/dark_theme__primary</item>
        <item name="colorPrimaryDark">@color/dark_theme__primary_dark</item>
        <item name="colorAccent">@color/fallback__accent</item>
        <item name="colorBottomNavigation">?colorAccent</item>
        <item name="colorEntryListHeader">@color/dark_theme__entry_list_header</item>
        <item name="colorPopupBackground">@color/fallback__popup_background</item>
        <item name="colorGray">@color/dark_theme__gray</item>
        <item name="android:keepScreenOn">@bool/debug</item>
        <item name="toolbarStyle">@style/DarkTheme.Widget.Toolbar</item>
    </style>

    <style name="DarkTheme.Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="popupTheme">@style/PopupTheme</item>
    </style>

    <style name="LightTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:colorBackground">@color/light_theme__background</item>
        <item name="android:colorEdgeEffect">?colorAccent</item>
        <item name="colorPrimary">@color/light_theme__primary</item>
        <item name="colorPrimaryDark">@color/light_theme__primary_dark</item>
        <item name="colorAccent">@color/fallback__accent</item>
        <item name="colorBottomNavigation">?colorAccent</item>
        <item name="colorEntryListHeader">@color/light_theme__entry_list_header</item>
        <item name="colorPopupBackground">@color/fallback__popup_background</item>
        <item name="colorGray">@color/light_theme__gray</item>
        <item name="android:keepScreenOn">@bool/debug</item>
        <item name="toolbarStyle">@style/LightTheme.Widget.Toolbar</item>
    </style>

    <style name="LightTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:colorBackground">@color/light_theme__background</item>
        <item name="android:colorEdgeEffect">?colorAccent</item>
        <item name="colorPrimary">@color/light_theme__primary</item>
        <item name="colorPrimaryDark">@color/light_theme__primary_dark</item>
        <item name="colorAccent">@color/fallback__accent</item>
        <item name="colorBottomNavigation">?colorAccent</item>
        <item name="colorEntryListHeader">@color/light_theme__entry_list_header</item>
        <item name="colorPopupBackground">@color/fallback__popup_background</item>
